{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES6",
    "module": "esnext",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "importHelpers": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "jsx": "react-native",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["lib", "lib-cjs"]
}