{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES2019",
    "module": "esnext",
    "lib": ["ES2019", "dom"],
    "declaration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["lib", "lib-cjs"]
}