{
  "compilerOptions": {
    "pretty": true,
    "outDir": "lib",
    "target": "ES2019",
    "module": "esnext",
    "lib": ["ES2019", "dom"],
    "types": [],
    "declaration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["lib", "lib-cjs", "node_modules", "src/**/*.test.ts", "src/**/*.test.tsx"]
}