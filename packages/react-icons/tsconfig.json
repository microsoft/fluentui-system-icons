{
  "compilerOptions": {
    "noEmit": true,
    "pretty": true,
    "outDir": "lib",
    "target": "ES2019",
    "module": "esnext",
    "lib": ["ES2019", "dom"],
    "types": [],
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": [
    "lib",
    "lib-cjs",
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/index.tsx",
    "src/fonts/",
    "src/icons/",
    "src/sizedIcons/",
    "src/atoms/"
  ]
}
