{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES6",
    "module": "esnext",
    "lib": ["es6", "dom"],
    "declaration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["lib", "lib-cjs"]
}